<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <RollingFile name="AppLogger"
                     fileName="D:/logs/fashioncart.log"
                     filePattern="D:/logs/fashioncart-%d{yyyy-MM-dd}.log">

            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c - %m%n"/>

            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>
        
    
        <RollingFile name="ErrorFile"
                     fileName="D:/logs/fashioncarterror.log"
                     filePattern="D:/logs/fashioncarterror-%d{yyyy-MM-dd}.log">

            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c - %m%n"/>

            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            
            <Filters>
            	<ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="Deny"/>
            </Filters>
        </RollingFile>
        
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="AppLogger"/>
          	<AppenderRef ref="ErrorFile"/>
        </Root>   
    </Loggers>

</Configuration>